
<div ng-app="userapp">
    <div ng-controller="ProfileLoginCtrl">
        <div>
            <form novalidate name="frmStudent" id="frmStudent" class="form-horizontal row-border">
                <br />
                <div style="width: 100px; height:100px;    padding-left: 35%;  margin-right: -25px; margin-top:10px">
                    <a>
                        <img class="post-thumbnail" ng-src="{{ImgSrc}}" style=" height: 70px;" />
                    </a>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="input17"> User Name</label>
                        <div class="col-md-7"> <input type="text" id="idFirstName" class="form-control" name="nameFirstName" ng-model="UserName" /> </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="input17"> Hobby</label>
                        <div class="col-md-7"> <input type="text" id="idLastName" class="form-control" name="nameFirstName" ng-model="Hobby" /> </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="input17"> User Photo</label>
                        <div class="col-md-7">
                            <input class="form-control" type="button" value="Add Images" ngf-select="uploadImage($files)"
                                   accept=".jpg, .jpeg,.png" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4"> </div>
                        <div class="col-md-7">
                            <span id="save" class="btn btn-success margin-right-btn" ng-click="SaveUpdate()">
                                <i class="icon-save"></i> {{btnText}}
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4"> </div>
                        <div class="col-md-7">
                            <span id="save" class="btn btn-success margin-right-btn" ng-click="GetAllUsers()">
                                <i class="icon-save" ></i> Get All Users
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-ui-router.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="../Scripts/ng-file-upload-all.js"></script>
<script src="~/Module/app.js"></script>
<script src="~/Controllers/ProfileLoginCtrl.js"></script>
<script src="~/Services/ServerRequestSvc.js"></script>
<script src="~/Services/FileReaderSvc.js"></script>

